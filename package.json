{
  "name": "srcbook-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo test",
    "lint": "turbo lint",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "generate": "pnpm --filter api generate",
    "migrate": "pnpm --filter api migrate",
    "start": "turbo run start",
    "ci:publish": "pnpm publish -r",
    "ci:version": "pnpm changeset version",
    "desktop": "turbo run start --filter=@srcbook/desktop",
    "desktop:build": "turbo run build --filter=@srcbook/api --filter=@srcbook/web --filter=@srcbook/desktop && turbo run build:electron --filter=@srcbook/desktop"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@srcbook/configs": "workspace:^",
    "@types/node": "^20.14.2",
    "prettier": "^3.3.3",
    "typescript": "5.6.2",
    "eslint": "^8.57.0"
  },
  "dependencies": {
    "turbo": "^2.1.1"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18"
  }
}
